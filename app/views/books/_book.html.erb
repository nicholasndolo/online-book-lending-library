<div id="<%= dom_id book %>" class="bg-gray-800 shadow rounded-lg px-5 py-3 my-4">
  <p class="text-gray-100 text-lg mb-1 font-bold">
    <%= book.title %><br>
    <em>Written by</em>
    <%= book.author %>
  </p>



  <p class="text-gray-100 text-lg mb-1 font-bold">
    <strong>Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p class="text-gray-100 text-md mb-1 font-bold bg-gray-100 z-50 border">
  
     <%= book.available ? "Borrow" : "" %>
  </p>

</div>
