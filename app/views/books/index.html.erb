<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>

<h1 class="font-bold">Book</h1>

<div id="books">
  <% @books.each do |book| %>
   <div id="<%= dom_id book %>" class=" bg-gray-800 shadow rounded-lg px-5 py-3 my-4">
      <p class="text-gray-100 text-lg mb-1 font-bold">
       <%= book.title %>
      </p>

      <p>
        <%= link_to "View", book_path(book), class: "hover:bg-gray-700 text-gray-100 font-bold py-2 px-4 rounded" %>
      </p>
    </div>
  <% end %> 
</div>
